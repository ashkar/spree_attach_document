
<%= render :partial => 'spree/admin/shared/product_sub_menu' %>

<%= render :partial => 'spree/admin/shared/product_tabs', :locals => {:current => 'Docs'} %>

<table class="index sortable" data-hook="docs_table" data-sortable-link="<%= update_positions_admin_product_docs_url(@product) %>">
  <tr data-hook="docs_header">
    <th><%= t(:thumbnail) %></th>
    <% if @product.has_variants? %>
      <th><%= Spree::Variant.model_name.human %></th>
    <% end %>
    <th><%= t(:alt_text) %></th>
    <th><%= t(:action) %></th>
  </tr>

   
   
  <% @product.docs.each do |doc| %>
    <tr id="<%= spree_dom_id doc %>">
      <td>
        <span class="handle"></span>
        <%= image_tag(get_doc_icon(doc), :align => 'left') %>
      </td>
      <td><%= link_to(doc.attachment.original_filename, doc.attachment.url) %></td>
      <td class="actions">
        <%= link_to_with_icon('edit', t("edit"), edit_admin_product_doc_url(@product, doc), :class => 'edit') %>
        &nbsp;
        <%= link_to_delete doc, {:url => admin_product_doc_url(@product, doc) }%>
      </td>
    </tr>
  <% end %>


  <% @product.variants.each do |variant| %>
    <% variant.docs.each do |doc| %>
      <tr id="<%= spree_dom_id doc %>" data-hook="docs_row">
        <td><span class="handle"></span><%= image_tag(get_doc_icon(doc), :align => 'left') %></td>
        <% if @product.has_variants? %>
          <td><%= variant.options_text %></td>
        <% end %>
        <td><%= link_to(doc.attachment.original_filename, doc.attachment.url) %></td>
        <td class="actions">
          <%= link_to_with_icon 'edit', t(:edit), edit_admin_product_doc_url(@product, doc) %>
          &nbsp;
          <%= link_to_delete doc, {:url => admin_product_doc_url(@product, doc) }%>
        </td>
      </tr>
    <% end %>
  <% end %>
 
</table>

<div id="docs"></div>
<br/>
<p>
    <%= link_to icon('add') + ' ' + t("new_document"), new_admin_product_doc_url(@product), :id => "new_doc_link" %>
</p>

<% content_for :head do %>
  <script type="text/javascript">
    jQuery(document).ready(function(){  
      
      jQuery('#new_doc_link').click(function (event) { 
        event.preventDefault();
        jQuery(this).hide();
        jQuery.ajax({type: 'GET', url: this.href, data: ({authenticity_token: AUTH_TOKEN}), success: function(r){ jQuery('#docs').html(r);} });
      });
      
    });
  </script>
<% end %>
