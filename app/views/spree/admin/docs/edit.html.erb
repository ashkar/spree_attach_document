<%= render :partial => 'spree/admin/shared/product_sub_menu' %>

<%= render :partial => 'spree/admin/shared/product_tabs', :locals => { :current => 'Images' } %>

<%= render :partial => 'spree/shared/error_messages', :locals => { :target => @image } %>

<%= form_for [:admin, @product, @doc], :html => { :multipart => true } do |f| %>
  <table class="basic-table" data-hook="edit_doc">
    <tr data-hook="thumbnail">
     <td><%= image_tag( get_doc_icon(@doc) ) %></td>
      <td><%= @doc.attachment.original_filename %></td>
    </tr>
    <%= render :partial => 'form', :locals => { :f => f } %>
  </table>
  <p class="form-buttons" data-hook="buttons">
    <%= button t(:update) %>
    <%= t(:or) %> <%= link_to t(:cancel), admin_product_docs_url(@product), :id => 'cancel_link' %>
  </p>
<% end %>

